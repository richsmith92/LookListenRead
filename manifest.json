{
    "manifest_version": 2,

    "name": "Look Listen Read",
    "description": "Listen to web pages",
    "version": "1.0",
    "minimum_chrome_version": "49",

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "content_scripts": [ {
        "all_frames": false,
        "css": ["content.css"],
        "js": [
            "jquery.min.js",
            "jquery.blast.min.js",
            "mousetrap.min.js",
            "defaults.js",
            "content.js" ],
        "matches": [ "http://*/*", "https://*/*", "file://*/*" ],
        "run_at": "document_end"
    } ],

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        }
    },

    "permissions": [
        "tabs","storage","contextMenus"
    ]
}
