{
    "manifest_version": 2,

    "name": "Look Listen Read",
    "description": "Listen to web pages",
    "version": "1.0",

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "content_scripts": [ {
        "all_frames": true,
        "css": ["content.css"],
        "js": [
            "jquery.min.js",
            "jquery.blast.min.js",
            "mousetrap.min.js",
            "defaults.js",
            "content.js" ],
        "matches": [ "http://*/*", "https://*/*", "file://*/*" ]
    } ],

    "permissions": [
        "tabs","storage"
    ]
}
